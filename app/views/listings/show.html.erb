<article>
  <figure>
  </figure>
  <figcaption>
    <h1><%= @listing.address %></h1>
  </figcaption>

  <% if @earliest_available_date %>
    <p>ğŸ’ Available on <%= @earliest_available_date.to_formatted_s(:long) %></p>
  <% end %>

  <% if @new_trip %>
    <section class="listing_book">
      <%= render(partial: 'trips/form', locals: { trip: @new_trip, guests_max: @provision.guests_max }) %>
    </section>
  <% end %>

  <% if @provision %>
    <aside>
      <%= render @provision %>
    </aside>
  <% end %>

  <figure>
    <%= render partial: 'map_embed', locals: { lat: @listing.lat, lng: @listing.lng } %>
  </figure>

  <% host_profile = @listing.host.profile %>
  <% if host_profile %>
    <aside>
      <h2>Hosted by <%= link_to host_profile.first_name, host_profile %></h2>
      <%= render host_profile, locals: { small: true } %>
    </aside>
  <% end %>

  <% if current_user == @listing.host %>
    <nav>
      <%= link_to 'Edit', edit_listing_path(@listing) %>
      <%= link_to 'Edit Provisions', edit_listing_listing_provisions_path(@listing) %>
    </nav>
  <% end %>
</article>