<% home_icon = render 'shared/fa', id: 'home' %>

<p id="notice"><%= notice %></p>

<% if @regions.nil? %>
  <h1>ğŸ¡ Listings</h1>
<% elsif @regions.count == 1 %>
  <% region = @regions.first %>
  <h1>ğŸ¡ <%= region.country.emoji_flag %> <%= region.address %></h1>
<% elsif @country.present? %>
  <h1>ğŸ¡ <%= @country.emoji_flag %> <%= @country.name %></h1>
<% else %>
  <h1>ğŸ¡ in <%= pluralize(@regions.count, 'region') %></h1>
<% end %>

<table>
  <thead>
    <tr>
      <th>Host</th>
      <th>Address</th>
      <th>Lat</th>
      <th>Lng</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.host.email %></td>
        <td><%= listing.address %></td>
        <td><%= listing.lat %></td>
        <td><%= listing.lng %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

